<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentPantallaProductos">

    <!-- TODO: Update blank fragment layout -->


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_view_Productos_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="62dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Productos"
        android:textColor="@color/amarilloBotones"
        android:textSize="40dp"
        app:fontFamily="@font/poppins_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/editarProductosBoton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="Editar Productos"
        app:layout_constraintBottom_toBottomOf="@+id/text_view_Productos_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/text_view_Productos_2"
        app:layout_constraintTop_toTopOf="@+id/text_view_Productos_2"
        app:layout_constraintVertical_bias="0.5" />

    <ScrollView
        android:id="@+id/productos_scrollview"
        android:layout_width="1050dp"
        android:layout_height="600dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/text_view_Productos_2"
        app:layout_constraintTop_toBottomOf="@+id/text_view_Productos_2"
        app:layout_constraintVertical_bias="0.0">

        <TableLayout
            android:id="@+id/tProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
